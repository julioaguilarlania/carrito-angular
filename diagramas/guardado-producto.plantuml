@startuml Creacion Producto
participant backend order 10 #88FF88
participant Productos order 20
participant Servicio order 15
participant Formulario order 30
participant Usuario order 40
activate Productos
activate Servicio
activate backend
Productos -> Formulario : visible
activate Formulario
actor Usuario
Formulario <- Usuario : llenar 
Formulario <- Usuario : button-guardar
Formulario -> Productos : guardar
deactivate Formulario
activate Productos
Productos -> Productos : guardarProducto(p)
Productos ->> Servicio : crearProducto(p);
Servicio ->> backend : POST producto
alt guardado
backend -> Servicio : CREATED
Servicio ->> Productos : next()
else error
backend -> Servicio : BAD REQUEST
Servicio ->> Productos : error()
end
deactivate Productos
@enduml